<dl>
  <dt>Part of Speech</dt>
  <dd><%= Lexeme::PARTS_OF_SPEECH[@lexeme.pos] || @lexeme.pos %></dd>
  <% unless @lexeme.tags.empty? %>
    <dt>Tags</dt>
    <dd><%= @lexeme.tags.join(', ') %></dd>
  <% end %>
  <% if @lexeme.etymology %>
    <dt>Etymology</dt>
    <dd><%= @lexeme.etymology %></dd>
  <% end %>
  <% if @lexeme.explanation %>
    <dt>Explanation</dt>
    <dd><%= @lexeme.explanation %></dd>
  <% end %>
  <% if ENV['DEVELOPMENT'] %>
    <% unless @lexeme.closed? %>
      <dt>Quality (5 is best)</dt>
      <dd>
        <% %w[Accuracy Flexibility Simplicity Hebraicity Certainty].each_with_index do |label, i| %>
          <%= label %> &mdash; <%= @lexeme.quality[i] || 0 %><br>
        <% end %>
      </dd>
    <% end %>
  <% end %>
</dl>
<% if ENV['DEVELOPMENT'] %>
  <div class="button clear"><a href="/<%= @id %>/edit">Edit Lexeme</a></div>
<% end %>
